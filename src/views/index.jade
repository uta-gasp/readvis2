    body
        include ./components/controls.jade
        +controls( ids.controls )

        include ./components/options.jade
        +options( ids.options, optionLists )

        include ./components/visualization.jade
        +visualization( ids.visualization )

        include ./components/word-list.jade
        +word-list( ids.wordList )

        include ./components/word-replay.jade
        +word-replay( ids.wordReplay )

        script(src='app.js')
        script.
            Reading.init({
                visualization: '##{ids.visualization}',
                controls: '##{ids.controls}',
                options: '##{ids.options}',
                wordReplay: '##{ids.wordReplay}',
                wordList: '##{ids.wordList}',
            });
